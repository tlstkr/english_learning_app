@model CardViewModel

<div class="row">
    <div class="col-12">
        <h1>@Model.DeckName</h1>
        <p>Додати ще одне слово</p>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="DeckDetail" asp-action="AddNewCard" method="post">
            <div class="form-group">
                <label asp-for="QuestionText">Переклад українською</label>
                <input asp-for="QuestionText" class="form-control" aria-describedby="question" placeholder="Переклад">
            </div>
            <div class="form-group">
                <label asp-for="AnswerText">Слово англійською</label>
                <input asp-for="AnswerText" class="form-control" aria-describedby="answer" placeholder="Слово">
            </div>
            <button type="submit" class="btn btn-primary">Додати слово</button>
        </form>
    </div>
</div>
