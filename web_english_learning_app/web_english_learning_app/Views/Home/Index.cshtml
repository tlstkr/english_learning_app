@model List<DeckViewModel>
@{
    ViewData["Title"] = "Домашня сторінка";
}

<div>
    <h1 class="display-4" style="font-size:30px;color:grey;padding-bottom:10px;border-bottom:1px solid grey">Мої уроки</h1>
    <h4 class="display-4" style="font-size:30px;color:grey;padding-bottom:10px;border-bottom:1px solid grey">Тут будуть зберігатися слова за темами</h4>
    <div class="row">
        @foreach(var deck in Model)
        {
                <div class="col-sm-6 col-md-4 col-lg-3">
                  <div class="card m-3" style="box-shadow:10px 5px 5px grey;">
                      <div class="card-body deck-container">
                          <h5 class="card-title">@deck.Name</h5>
                          <h6 class="card-subtitle mb-2 text-muted">Кількість слів: @deck.TotalCards </h6>
                            <a asp-controller="DeckDetail" asp-action="Index" asp-route-id="@deck.Id" class="btn btn-link pl-0">Переглянути</a>
                            <form asp-controller="Home" asp-action="DeleteDeck" asp-route-deckId="@deck.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-link">Видалити</button>
                            </form>
                      </div>
                  </div>
                </div>
        }
    </div>
</div>
